<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="650" prefHeight="500"
            styleClass="root"
            stylesheets="@StartViewStyles.css">
            <!--
            style="-fx-background-color: #9ec3d1;"-->


    <!-- CONTENEDOR CENTRAL -->
    <VBox spacing="25" alignment="CENTER"
          AnchorPane.topAnchor="40"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0">

        <!-- TÍTULO -->
        <HBox alignment="CENTER">
            <Text text="Batalla Naval"
                  styleClass="title-text"/>
            <!--
                  style="-fx-font-size: 48px;
                        -fx-font-weight: bold;
                         -fx-fill: #0b0b0b;" />-->
        </HBox>

        <!-- BOTÓN DE INSTRUCCIONES -->
        <Button text="Instrucciones"
                prefWidth="150"
                styleClass="instructions-btn"/>

                <!--
                style=" -fx-background-color: #3a617d;
                        -fx-text-fill: white;
                        -fx-font-size: 10px;"-->


        <!-- USERNAME -->
        <VBox spacing="10" alignment="CENTER">
            <Label text="Nombre del jugador:"
                   styleClass="username-label"/>
            <!--style="-fx-font-size: 18px; -fx-text-fill: #1d1d1d;"-->

   <TextField fx:id="usernameField"
              maxWidth="250"
              promptText="Ingrese su nombre"
              styleClass="username-field"/>
</VBox>

<!-- BOTÓN PLAY -->
        <Button text="¡JUGAR!"
                prefWidth="150"
                prefHeight="45"
                styleClass="play-btn"/>

                <!--style="-fx-background-color: white;
                        -fx-font-size: 22px;
                        -fx-font-weight: bold;"/>-->
    </VBox>

    <!-- IMÁGENES DECORATIVAS ABAJO -->


    <!-- Olas -->
    <ImageView fitWidth="650" preserveRatio="true"
               AnchorPane.bottomAnchor="-5"
               AnchorPane.leftAnchor="0"
               AnchorPane.rightAnchor="0">
        <image>
            <Image url="@images/imageCenterWaves.png" />
        </image>
    </ImageView>
    <!-- ship right -->
    <ImageView fitWidth="250" preserveRatio="true"
               AnchorPane.bottomAnchor="0"
               AnchorPane.leftAnchor="10">
        <image>
            <Image url="@images/imageRight.png" />
        </image>
    </ImageView>

    <!-- ship left -->
    <ImageView fitWidth="250" preserveRatio="true"
               AnchorPane.bottomAnchor="0"
               AnchorPane.rightAnchor="10">
        <image>
            <Image url="@images/imageLeft.png" />
        </image>
    </ImageView>

</AnchorPane>