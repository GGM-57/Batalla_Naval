<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>


<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.batalla_naval.controller.VistaConfiguracionTableroController"
            prefWidth="999" prefHeight="700"
            stylesheets="@VistaConfiguracionTableroEstilos.css">

    <!-- CONTENEDOR PRINCIPAL -->
    <HBox alignment="CENTER" spacing="40" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">

        <!-- PANEL IZQUIERDO -->

        <VBox spacing="20" alignment="TOP_CENTER"
              minWidth="225"
              prefWidth="225"
              maxWidth="225"
              styleClass="ship-panel">


            <Label styleClass="panel-title" text="Navios" />

            <!-- Fragata -->


            <Label text="Fragatas" styleClass="subtitles-ships"/>
            <HBox spacing="10" alignment="CENTER_LEFT" prefWidth="80">
                <Pane fx:id="paneFragatas" prefWidth="60" prefHeight="60"/>
                <Label fx:id="fragataCount" text="x4" styleClass="ship-count" alignment="BOTTOM_RIGHT"/>

                <!--el label del navio fragata debe cambiar -falta hacer logica de eso en el VistaConfiguracionTableroController-->

            </HBox>

            <!-- Destructores -->


            <Label text="Destructores" styleClass="subtitles-ships"/>
            <HBox spacing="10" alignment="CENTER_LEFT" prefWidth="80">
                <Pane fx:id="paneDestructores" prefWidth="60" prefHeight="60"/>
                <Label text="x3" styleClass="ship-count" alignment="BOTTOM_RIGHT"/>
                <!--el label del navio destructores debe cambiar -falta hacer logica de eso en el VistaConfiguracionTableroController-->
            </HBox>

            <!-- Submarinos -->

            <Label text="Submarinos" styleClass="subtitles-ships"/>
            <HBox spacing="10" alignment="CENTER_LEFT" prefWidth="80">
                <Pane fx:id="paneSubmarinos" prefWidth="60" prefHeight="60"/>
                <Label text="x2" styleClass="ship-count" alignment="BOTTOM_RIGHT"/>

                <!--el label del navio submarinos debe cambiar -falta hacer logica de eso en el VistaConfiguracionTableroController-->
            </HBox>

            <!-- Portaaviones -->

            <Label text="Portaaviones" styleClass="subtitles-ships"/>
            <HBox spacing="10" alignment="CENTER_LEFT" prefWidth="80">
                <Pane fx:id="panePortaaviones" prefWidth="60" prefHeight="60"/>
                <Label text="x1" styleClass="ship-count" alignment="BOTTOM_RIGHT"/>

                <!--el label del navio portaviones debe cambiar -falta hacer logica de eso en el VistaConfiguracionTableroController-->
            </HBox>
        </VBox>

        <!-- PANEL CENTRAL (TABLERO Y BARRA INFORMACIONES) -->
        <VBox alignment="CENTER" prefHeight="480" prefWidth="480" spacing="20">

            <Label styleClass="board-title" text="Tablero del Jugador" />

            <StackPane fx:id="contenedorTablero" alignment="CENTER" maxHeight="500" maxWidth="500" prefHeight="500" prefWidth="500" style="-fx-background-color: #0a1f44; -fx-background-radius: 10; -fx-padding: 20;">

                <GridPane fx:id="tableroJugadorGrid" maxHeight="450" maxWidth="450" minHeight="450" minWidth="450" prefHeight="450" prefWidth="450" styleClass="grid-board" />
            </StackPane>


            <!-- MENSAJE -->
            <Label fx:id="informationLabel" prefWidth="600" styleClass="rotate-hint" text="Posicione sus navios en el tablero - Presione click derecho para girar el barco" wrapText="true" />
        </VBox>

        <!-- PANEL DERECHO - BOTON DE COMENZAR JUEGO -->
        <VBox alignment="CENTER_RIGHT" prefHeight="50" prefWidth="200">
            <Button fx:id="btnIniciarBatalla" prefHeight="50" prefWidth="200" styleClass="start-btn" text="Â¡A LUCHAR!" />
        </VBox>

    </HBox>
</AnchorPane>
