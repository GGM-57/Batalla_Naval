<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.batalla_naval.controller.VistaConfiguracionTableroController"
            prefWidth="900" prefHeight="650"
            stylesheets="@VistaConfiguracionTableroEstilos.css">

    <!-- CONTENEDOR PRINCIPAL -->
    <HBox spacing="40" alignment="CENTER"
          AnchorPane.topAnchor="20"
          AnchorPane.leftAnchor="20"
          AnchorPane.rightAnchor="20"
          AnchorPane.bottomAnchor="20">

        <!-- PANEL IZQUIERDO PARA SELECCIÓN DE BARCOS -->
        <VBox spacing="20" alignment="TOP_CENTER"
              prefWidth="160"
              styleClass="ship-panel">

            <Label text="Ships"
                   styleClass="panel-title"/>

            <!-- Fragatas (x4) -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <ImageView fitWidth="35"
                           preserveRatio="true">
                    <image>
                           <Image url="@images/fragata.png" />
                    </image>
                </ImageView>
                <Label text="x4" styleClass="ship-count" />
            </HBox>

            <!-- Destructores (x3) -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <ImageView fitWidth="35"
                           preserveRatio="true">
                    <image>
                        <Image url="@images/fragata.png" />
                    </image>
                </ImageView>
                <Label text="x3" styleClass="ship-count" />
            </HBox>

            <!-- Submarinos (x2) -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <ImageView fitWidth="35"
                           preserveRatio="true">
                    <image>
                        <Image url="@images/fragata.png" />
                    </image>
                </ImageView>
                <Label text="x2" styleClass="ship-count" />
            </HBox>

            <!-- Portaaviones (x1) -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <ImageView fitWidth="35"
                           preserveRatio="true">
                    <image>
                        <Image url="@images/fragata.png" />
                    </image>
                </ImageView>
                <Label text="x1" styleClass="ship-count" />
            </HBox>

        </VBox>

        <!-- PANEL CENTRAL QUE CONTIENE EL TABLERO -->
        <VBox spacing="15" alignment="TOP_CENTER">

            <Label text="Tablero del Jugador"
                   styleClass="board-title"/>

            <!-- TABLERO (lo manejarás desde el controlador) -->
            <GridPane fx:id="playerBoard"
                      gridLinesVisible="true"
                      styleClass="game-board"
                      prefWidth="450"
                      prefHeight="450"/>

            <!-- MENSAJE DE AYUDA -->
            <Label text="Presione click derecho para girar el barco"
                   styleClass="rotate-hint"/>
        </VBox>

        <!-- BOTÓN DE COMENZAR JUEGO -->
        <VBox alignment="CENTER_RIGHT"
              prefWidth="180">
            <Button fx:id="btnIniciarBatalla"
                    text="Iniciar Batalla"
                    styleClass="start-btn"
                    prefWidth="150"
                    prefHeight="50"/>
        </VBox>

    </HBox>

</AnchorPane>