<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700" prefWidth="999" stylesheets="@VistaConfiguracionTableroEstilos.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.batalla_naval.controller.VistaConfiguracionTableroController">

    <!-- CONTENEDOR PRINCIPAL -->
    <HBox alignment="CENTER" spacing="40" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">

        <!-- PANEL IZQUIERDO -->

        <VBox alignment="TOP_CENTER" maxWidth="225" minWidth="225" prefWidth="225" spacing="20" styleClass="ship-panel">


            <Label styleClass="panel-title" text="Navios" />

            <!-- Fragata -->


            <Label styleClass="subtitles-ships" text="Fragatas" />
            <HBox alignment="CENTER_LEFT" prefWidth="80" spacing="10">
                <Pane fx:id="paneFragatas" prefHeight="60" prefWidth="60" />
                <Label fx:id="fragataCount" alignment="BOTTOM_RIGHT" styleClass="ship-count" text="x4" />

                <!--el label del barco fragata debe cambiar -falta hacer logica de eso en el VistaConfiguracionTableroController-->

            </HBox>

            <!-- Destructores -->


            <Label styleClass="subtitles-ships" text="Destructores" />
            <HBox alignment="CENTER_LEFT" prefWidth="80" spacing="10">
                <Pane fx:id="paneDestructores" prefHeight="60" prefWidth="60" />
                <Label fx:id="destructorCount" alignment="BOTTOM_RIGHT" styleClass="ship-count" text="x3" />
                <!--el label del barco destructores debe cambiar -falta hacer logica de eso en el VistaConfiguracionTableroController-->
            </HBox>

            <!-- Submarinos -->

            <Label styleClass="subtitles-ships" text="Submarinos" />
            <HBox alignment="CENTER_LEFT" prefWidth="80" spacing="10">
                <Pane fx:id="paneSubmarinos" prefHeight="60" prefWidth="60" />
                <Label fx:id="submarinoCount" alignment="BOTTOM_RIGHT" styleClass="ship-count" text="x2" />

                <!--el label del barco submarinos debe cambiar -falta hacer logica de eso en el VistaConfiguracionTableroController-->
            </HBox>

            <!-- Portaaviones -->

            <Label styleClass="subtitles-ships" text="Portaaviones" />
            <HBox alignment="CENTER_LEFT" prefWidth="80" spacing="10">
                <Pane fx:id="panePortaaviones" prefHeight="60" prefWidth="60" />
                <Label fx:id="portaavionesCount" alignment="BOTTOM_RIGHT" styleClass="ship-count" text="x1" />

                <!--el label del barco portaviones debe cambiar -falta hacer logica de eso en el VistaConfiguracionTableroController-->
            </HBox>
        </VBox>

        <!-- PANEL CENTRAL (TABLERO Y BARRA INFORMACIONES) -->
        <VBox alignment="CENTER" prefHeight="480" prefWidth="480" spacing="20">

            <Label styleClass="board-title" text="Tablero del Jugador" />

            <StackPane fx:id="contenedorTablero" alignment="CENTER" maxHeight="500" maxWidth="500" prefHeight="500" prefWidth="500" style="-fx-background-color: #0a1f44; -fx-background-radius: 10; -fx-padding: 20;">

                <GridPane fx:id="tableroJugadorGrid" maxHeight="450" maxWidth="450" minHeight="450" minWidth="450" prefHeight="450" prefWidth="450" styleClass="grid-board" />
            </StackPane>


            <!-- MENSAJE -->
            <Label fx:id="informationLabel" prefWidth="600" styleClass="rotate-hint" text="Posicione sus navios en el tablero - Presione click derecho para girar el barco" wrapText="true" />
        </VBox>

        <!-- PANEL DERECHO - BOTON DE COMENZAR JUEGO -->
        <VBox alignment="CENTER_RIGHT" prefHeight="50" prefWidth="200">
            <Button fx:id="btnIniciarBatalla" prefHeight="50" prefWidth="200" styleClass="start-btn" text="Â¡A LUCHAR!" />
        </VBox>

    </HBox>
</AnchorPane>
