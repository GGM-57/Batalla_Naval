<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="498.0" prefWidth="950.0" styleClass="enemy-root" stylesheets="@VistaTableroMaquinaEstilos.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.batalla_naval.controller.ControladorVistaTableroMaquina">

    <children>

        <!-- CONTENEDOR PRINCIPAL -->
        <VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="950.0" spacing="20" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0.0">

            <!-- TÍTULO -->
            <VBox alignment="CENTER" spacing="6" styleClass="header">
                <Label styleClass="title" text="Reconocimiento del Enemigo" />
                <Label styleClass="subtitle" text="Revisa la ubicación de los barcos enemigos antes de iniciar la batalla." />
            </VBox>

            <!-- CONTENEDOR DEL TABLERO -->
            <VBox alignment="CENTER" styleClass="board-container">

                <GridPane fx:id="gridTableroMaquina" maxHeight="450" maxWidth="450" prefHeight="450" prefWidth="450" styleClass="enemy-grid" />
            </VBox>

            <!-- BOTÓN -->
            <Button fx:id="btnHecho" onAction="#onVolverConfiguracion" styleClass="btn-primary" text="HECHO" />

        </VBox>

    </children>
</AnchorPane>
