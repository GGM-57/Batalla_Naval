<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="600" prefHeight="700"
            style="-fx-background-color: #9ec3d1;"
            stylesheets="@css/introduction-styles.css">

    <!-- CONTENEDOR CENTRAL -->
    <VBox spacing="25" alignment="CENTER"
          AnchorPane.topAnchor="40"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0">

        <!-- TÍTULO -->
        <HBox alignment="CENTER">
            <Text text="NAVAL BATTLE"
                  style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-fill: #0b0b0b;" />
        </HBox>

        <!-- BOTÓN DE INSTRUCCIONES -->
        <Button text="Instructions"
                prefWidth="150"
                style="-fx-background-color: #3a617d; -fx-text-fill: white; -fx-font-size: 18px;"/>

        <!-- USERNAME -->
        <VBox spacing="10" alignment="CENTER">
            <Label text="Username"
                   style="-fx-font-size: 18px; -fx-text-fill: #1d1d1d;"/>
            <TextField fx:id="usernameField"
                       maxWidth="250"
                       promptText="Enter your username"/>
        </VBox>

        <!-- BOTÓN PLAY -->
        <Button text="PLAY"
                prefWidth="150"
                prefHeight="45"
                style="-fx-background-color: white; -fx-font-size: 22px; -fx-font-weight: bold;"/>
    </VBox>

    <!-- IMÁGENES DECORATIVAS ABAJO -->
    <ImageView fitWidth="250" preserveRatio="true"
               AnchorPane.bottomAnchor="0"
               AnchorPane.leftAnchor="10"
               image="@images/ship_left.png"/>

    <ImageView fitWidth="250" preserveRatio="true"
               AnchorPane.bottomAnchor="0"
               AnchorPane.rightAnchor="10"
               image="@images/ship_right.png"/>

</AnchorPane>